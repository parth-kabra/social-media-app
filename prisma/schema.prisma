// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())
  description String
  banner String
  likes Int
  creator String
  pfp String
  email String
  profileLink String
  key String
}

model Comment {
  id Int @id @default(autoincrement())
  text String
  profileLink String
  key String
  email String
  creator String
  pfp String
}

model User{
  id Int @id @default(autoincrement())
  userKey Int @unique
  creator String
  email String @unique
  pfp String
}