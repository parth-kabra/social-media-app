// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  id Int @id @default(autoincrement())
  description String
  banner String
  likes Int
  creator String
  pfp String
  key String
}

model Comment {
  id Int @id @default(autoincrement())
  text String
  key String
  creator String
  pfp String
}